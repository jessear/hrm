<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指用户自定义的命名空间。 -->
<mapper namespace="com.jesse.mapper.JobMapper">

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.jesse.bean.Job">
        select * from job_inf where id=#{id}
    </select>

    <select id="selectAllJob" resultType="com.jesse.bean.Job">
        select * from job_inf
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from job_inf where id=#{id}
    </delete>

    <update id="update" parameterType="com.jesse.bean.Job">
        update job_inf
        <set>
            <if test="name != null"> name= #{name},</if>
            <if test="remark != null">remark= #{remark},</if>
        </set>
        where id=#{id}
    </update>

    <select id="selectByPage" parameterType="hashmap" resultType="com.jesse.bean.Job">
        select * from job_inf
            <if test="job != null">
                <if test="job.name != null and job.name !=''">
                    where name LIKE CONCAT ('%',#{job.name},'%')
                </if>
            </if>
            <if test="pageModel != null">
                limit #{pageModel.firstLimitParam},#{pageModel.pageSize}
            </if>
    </select>

    <select id="count" parameterType="hashmap" resultType="java.lang.Integer">
        select count(*) from job_inf
        <if test="job != null">
            <if test="job.name != null and job.name !=''">
                where name LIKE CONCAT ('%',#{job.name},'%')
            </if>
        </if>
    </select>

    <insert id="save" parameterType="com.jesse.bean.Job">
        insert into job_inf <include refid="insertJob"/>
    </insert>

    <sql id="insertJob">
        <set>
            <if test="name != null">name= #{name},</if>
            <if test="remark != null">remark= #{remark}</if>
        </set>
    </sql>

</mapper>